<Window x:Class="DokuWikiEditor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="DokuWikiEditor" Height="406" Width="500" SizeToContent="WidthAndHeight">
    <Grid Width="Auto" Height="Auto">
        <DockPanel Name="mainPanel" Width="Auto" Height="Auto">
            <StackPanel Height="Auto" Name="menuPanel" Width="320" HorizontalAlignment="Left" DockPanel.Dock="Left">
                <Button Height="23" Name="connectToWikiButton" Width="Auto" Click="connectToWikiButton_Click">Connect to wiki</Button>
                <TextBox Height="23" Name="connectoToWikiText" Width="Auto" BorderThickness="1" Text="http://www.mywiki.org/lib/exe/xmlrpc.php"/>
                <Button Height="23" Name="getWikipageButton" Width="Auto" Click="getWikipageButton_Click">Get Wiki Page</Button>
                <TextBox BorderThickness="1" Height="23" Name="getWikipageText" Width="Auto">wikipage name</TextBox>
            </StackPanel>
            <RichTextBox Height="Auto" Name="outputBox" Width="500" BorderThickness="1" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
        </DockPanel>
    </Grid>
</Window>
